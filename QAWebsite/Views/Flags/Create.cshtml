@model QAWebsite.Models.QuestionViewModels.FlagViewModel
@using QAWebsite.Models.Enums;
@using QAWebsite.Models.UserModels

@{
    ViewData["Title"] = "Flag";
}

<h2>Flag</h2>

<h4>Question</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
                <select asp-for="SelectedReason" asp-items="Html.GetEnumSelectList<FlagType>()"></select>
                <span asp-validation-for="SelectedReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Details" asp-controller="Question" asp-route-questionId="@Model.QuestionId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}