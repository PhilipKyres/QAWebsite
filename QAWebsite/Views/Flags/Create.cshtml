@model QAWebsite.Models.FlagViewModels.FlagViewModel

@{
    ViewData["Title"] = "Flag";
}

<h2>Flag</h2>

<h4>Question</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <select asp-for="SelectedReason" asp-items="Model.Reasons" class="selectpicker"></select>

                <span asp-validation-for="SelectedReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Details" asp-controller="Question" asp-route-id="@Model.Id">Back</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
